<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


        <ImageView
            android:id="@+id/img_item_search_id"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/dienthoai" />

            <TextView
                android:id="@+id/tv_search_tenSP_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@id/img_item_search_id"
                android:text="Ten san pham"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_search_giaSP_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_item_search_id"
                android:layout_below="@id/tv_search_tenSP_id"
                android:text="Ten san pham"
                android:textColor="@color/red"
                android:textSize="16dp" />

</RelativeLayout>