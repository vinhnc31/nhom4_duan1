<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.HistoryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_lichsu"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@drawable/img" />

            <TextView
                android:id="@+id/tv_lichsu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_lichsu"
                android:gravity="center"
                android:text="Lịch Sử Mua Hàng"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/ed_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_lichsu"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bogocpasss"
                android:drawableStart="@drawable/ic_baseline_phone_android_24"
                android:hint="Tìm Kiếm Số Điện Thoại Mua Hàng"
                android:padding="10dp"
                android:paddingLeft="10dp"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/img_search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/ed_search"
                android:layout_marginLeft="-55dp"
                android:layout_marginTop="-58dp"
                android:layout_toRightOf="@+id/ed_search"
                android:background="@drawable/ic_baseline_search_24" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_histor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ed_search" />
        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>