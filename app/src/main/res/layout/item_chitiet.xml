<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="10dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:id="@+id/rl_history"
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent">

        <View
            android:background="#E1E1E1"
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp">
        </View>

        <ImageView
            android:id="@+id/img_anhct"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/divider"
            >
        </ImageView>

        <TextView
            android:id="@+id/tv_tenspct"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/divider"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/img_anhct"
            android:text="Iphone 12"
            android:textSize="10sp"
            >
        </TextView>

        <TextView
            android:id="@+id/tv_giact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_anhct"
            android:layout_below="@+id/tv_tenspct"
            android:text="20.000.000 VND"
            android:textSize="10sp"
            android:textColor="@color/red">
        </TextView>

        <TextView
            android:id="@+id/tv_soluongct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/img_anhct"
            android:layout_below="@+id/tv_giact"
            android:text="Số Lượng:"
            android:textSize="10sp"
            >
        </TextView>

        <TextView
            android:id="@+id/tv_soluongct1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/tv_soluongct"
            android:layout_below="@+id/tv_giact"
            android:text="1"
            android:textSize="10sp"
            >
        </TextView>

        <TextView
            android:id="@+id/tv_trangthaict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_toRightOf="@+id/tv_tenspct"
            android:layout_below="@+id/divider"
            android:text="Đang Chờ Xác Nhận"
            android:textSize="10sp"
            android:textColor="@color/teal_700"
            android:gravity="right">
        </TextView>
    </RelativeLayout>

</androidx.cardview.widget.CardView>