<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="5dp">
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/img_backchitiet"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:text="Quay Lại"
                android:background="@drawable/ic_baseline_keyboard_backspace_24_2"
                android:textSize="15sp"/>
            <TextView
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/img_backchitiet"
                android:text="Quay lại"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_below="@+id/img_backchitiet"
                android:id="@+id/tv_order_info_text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông Tin Đặt Hàng"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_order_info_text2"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text1"
                android:text="Mã Đặt Hàng :"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_madonhangct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text1"
                android:layout_toRightOf="@+id/tv_order_info_text2"
                android:text="AAAAA"
                android:textSize="15sp"
                android:textColor="@color/teal_200">
            </TextView>

            <TextView
                android:id="@+id/tv_order_info_text3"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text2"
                android:text="Ngày Đặt :"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_ngaydatct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text2"
                android:layout_toRightOf="@+id/tv_order_info_text3"
                android:text="27-01-2021"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_order_info_text4"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text3"
                android:text="Tên Khách Hàng :"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_tenkhachct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text3"
                android:layout_toRightOf="@+id/tv_order_info_text4"
                android:text="Trí"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_order_info_text5"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text4"
                android:text="Địa Chỉ :"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_diachikhachct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text4"
                android:layout_toRightOf="@+id/tv_order_info_text5"
                android:text="12 Hải Triều"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_order_info_text6"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text5"
                android:text="Số Điện Thoại :"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_sodtct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text5"
                android:layout_toRightOf="@+id/tv_order_info_text5"
                android:text="0777838375"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_order_info_text7"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text6"
                android:text="Số Sản Phẩm:"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_sospct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text6"
                android:layout_toRightOf="@+id/tv_order_info_text5"
                android:text="3"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_order_info_text8"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text7"
                android:text="Tổng Tiền :"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/tv_tongtienct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text7"
                android:layout_toRightOf="@+id/tv_order_info_text6"
                android:text="30,000,000 VNĐ"
                android:textSize="15sp"
                android:textColor="@color/red">
            </TextView>
            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/tv_order_info_text8"
                android:background="@color/black">
            </View>

            <TextView
                android:id="@+id/tv_order_info_text10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider2"
                android:layout_marginTop="10dp"
                android:text="Thông Tin Sản Phẩm :"
                android:textSize="15sp"
                android:textColor="@color/black">
            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_chitiet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/tv_order_info_text10">
            </androidx.recyclerview.widget.RecyclerView>
        </RelativeLayout>

    </ScrollView>

</FrameLayout>